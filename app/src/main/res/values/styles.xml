<resources>

    <!-- Application themes -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="LoginTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CollapsedToolbarSubtitleTheme" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">@dimen/collapsed_toolbar_subtitle_text_size</item>
        <item name="android:textColor">@color/grey_600</item>
    </style>

    <style name="CollapsedToolbarTitleTheme" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/collapsed_toolbar_title_text_size</item>
        <item name="android:textColor">@color/grey_900</item>
    </style>

    <style name="ExpandedToolbarSubtitleTheme" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">@dimen/expanded_toolbar_subtitle_text_size</item>
        <item name="android:textColor">@color/grey_100</item>
    </style>

    <style name="ExpandedToolbarTitleTheme" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/expanded_toolbar_title_text_size</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- activity_login.xml -->
    <style name="AppLogoAnimationImageView">
        <item name="android:layout_width">@dimen/login_logo_width</item>
        <item name="android:layout_height">@dimen/login_logo_height</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">@dimen/login_logo_padding</item>
        <item name="android:src">@drawable/app_logo</item>
        <item name="android:background">@drawable/app_logo_circular_view</item>
    </style>

    <!-- view_data_report_layout.xml -->
    <style name="CardViewInsertLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/data_report_layout_margin</item>
        <item name="cardCornerRadius">@dimen/data_report_layout_corner_radius</item>
        <item name="cardElevation">@dimen/data_report_layout_card_elevation</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <!-- divider style -->
    <style name="ViewLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/grey_200</item>
    </style>

    <style name="DataReportLayoutLastReportedTimeTitleTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:layout_marginEnd">@dimen/data_report_layout_title_margin_end</item>
        <item name="android:layout_marginStart">@dimen/data_report_layout_title_margin_start</item>
        <item name="android:layout_marginTop">@dimen/data_report_layout_title_margin_top</item>
        <item name="android:text">@string/last_data_report_title</item>
        <item name="android:textColor">@color/grey_800</item>
        <item name="android:textSize">@dimen/data_report_layout_title_text_size</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="DataReportLayoutLastReportedTimeTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:layout_margin">@dimen/data_report_layout_content_margin</item>
        <item name="android:textColor">@color/grey_600</item>
        <item name="android:textSize">@dimen/data_report_layout_content_text_size</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="DataReportLayoutChooseReportingTypeTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:layout_margin">@dimen/data_report_layout_title_margin</item>
        <item name="android:text">@string/choose_reporting_type_title</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/grey_800</item>
        <item name="android:textSize">@dimen/data_report_layout_title_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DataReportLayoutGridLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginBottom">@dimen/data_report_layout_grid_view_margin_bottom
        </item>
        <item name="android:layout_marginEnd">@dimen/data_report_layout_grid_view_margin_end</item>
        <item name="android:layout_marginStart">@dimen/data_report_layout_grid_view_margin_start
        </item>
        <item name="android:columnCount">2</item>
        <item name="android:rowCount">2</item>
    </style>

    <style name="DataReportLayoutPotholeImageView">
        <item name="android:layout_width">@dimen/data_report_layout_image_view_width</item>
        <item name="android:layout_height">@dimen/data_report_layout_image_view_height</item>
        <item name="android:layout_column">0</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_row">0</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:alpha">0.8</item>
        <item name="android:background">@drawable/image_view_selected</item>
        <item name="android:padding">@dimen/data_report_layout_image_view_padding</item>
        <item name="android:src">@drawable/ic_pothole_white</item>
    </style>

    <style name="DataReportLayoutPotholeTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_column">0</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_row">1</item>
        <item name="android:text">@string/pothole_text</item>
        <item name="android:textColor">@color/blue_600</item>
        <item name="android:textSize">@dimen/data_report_layout_report_type_text_size</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="DataReportLayoutAccidentImageView">
        <item name="android:layout_width">@dimen/data_report_layout_image_view_width</item>
        <item name="android:layout_height">@dimen/data_report_layout_image_view_height</item>
        <item name="android:layout_column">1</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginStart">@dimen/data_report_layout_image_view_margin_start
        </item>
        <item name="android:layout_row">0</item>
        <item name="android:alpha">0.8</item>
        <item name="android:background">@drawable/image_view_not_selected</item>
        <item name="android:padding">@dimen/data_report_layout_image_view_padding</item>
        <item name="android:src">@drawable/ic_accident_black</item>
    </style>

    <style name="DataReportLayoutAccidentTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_column">1</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginStart">@dimen/data_report_layout_report_type_margin_start
        </item>
        <item name="android:layout_row">1</item>
        <item name="android:text">@string/accident_text</item>
        <item name="android:textColor">@color/grey_700</item>
        <item name="android:textSize">@dimen/data_report_layout_report_type_text_size</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="DataReportLayoutViewLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginEnd">@dimen/data_report_layout_view_line_margin_end</item>
        <item name="android:layout_marginStart">@dimen/data_report_layout_view_line_margin_start
        </item>
        <item name="android:background">@color/grey_200</item>
    </style>

    <style name="CustomDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowNoTitle">false</item>
    </style>

    <!-- fragment_maps layout styles-->
    <style name="FirebaseConnectivityTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">@dimen/firebase_connection_view_padding_bottom</item>
        <item name="android:paddingLeft">@dimen/firebase_connection_view_padding_left</item>
        <item name="android:paddingRight">@dimen/firebase_connection_view_padding_right</item>
        <item name="android:paddingTop">@dimen/firebase_connection_view_padding_top</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/firebase_connection_view_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- fragment_about_page.xml layout styles-->
    <style name="AboutPageTitleTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/about_page_title_padding</item>
        <item name="android:textSize">@dimen/about_page_title_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/grey_800</item>
    </style>

    <style name="AboutPageContentTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/about_page_content_padding</item>
        <item name="android:textSize">@dimen/about_page_content_text_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/grey_800</item>
    </style>

    <style name="AboutPageContentTextViewWithDrawable">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">@dimen/about_page_content_drawable_padding</item>
        <item name="android:padding">@dimen/about_page_content_padding</item>
        <item name="android:textSize">@dimen/about_page_content_text_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/grey_800</item>
    </style>

    <!-- activity_main.xml -->
    <style name="AppBarLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/appbar_layout_height</item>
        <item name="android:elevation">4dp</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="expanded">false</item>
    </style>

    <style name="CollapsingToolbarLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="contentScrim">?attr/colorPrimary</item>
        <item name="expandedTitleMarginBottom">
            @dimen/collapsing_toolbar_expanded_title_margin_bottom
        </item>
        <item name="expandedTitleMarginEnd">@dimen/collapsing_toolbar_expanded_title_margin_end
        </item>
        <item name="expandedTitleMarginStart">
            @dimen/collapsing_toolbar_expanded_title_margin_start
        </item>
        <item name="expandedTitleMarginTop">
            @dimen/collapsing_toolbar_expanded_title_margin_top
        </item>
        <item name="layout_collapseMode">parallax</item>
        <item name="layout_scrollFlags">scroll|exitUntilCollapsed</item>
        <item name="collapsedSubtitleTextAppearance">@style/CollapsedToolbarSubtitleTheme</item>
        <item name="collapsedTitleTextAppearance">@style/CollapsedToolbarTitleTheme</item>
        <item name="expandedSubtitleTextAppearance">@style/ExpandedToolbarSubtitleTheme</item>
        <item name="expandedTitleTextAppearance">@style/ExpandedToolbarTitleTheme</item>
        <item name="subtitle">@string/default_toolbar_subtitle</item>
        <item name="titleEnabled">true</item>
    </style>

    <style name="CollapsingLayoutBackground">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/app_bar_background</item>
        <item name="android:clickable">true</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:focusable">true</item>
        <item name="layout_collapseMode">parallax</item>
    </style>

    <style name="AppBarProfilePicImageView">
        <item name="android:layout_width">@dimen/appbar_profile_pic_width</item>
        <item name="android:layout_height">@dimen/appbar_profile_pic_height</item>
        <item name="android:layout_marginBottom">@dimen/appbar_profile_pic_margin_bottom</item>
        <item name="android:layout_marginStart">@dimen/appbar_profile_pic_margin_start</item>
        <item name="android:layout_marginTop">@dimen/appbar_profile_pic_margin_top</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:scaleType">fitXY</item>
    </style>


    <style name="AppBarUserNameTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/appbar_name_margin_start</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/appbar_name_text_size</item>
    </style>

    <style name="AppBarUserEmailTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/appbar_email_margin_start</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/appbar_email_text_size</item>
    </style>

    <style name="AppToolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:elevation">@dimen/app_toolbar_elevation</item>
        <item name="android:theme">@style/AppTheme</item>
        <item name="layout_collapseMode">pin</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>


    <style name="MapsMyLocationButton">
        <item name="android:layout_width">@dimen/location_button_width</item>
        <item name="android:layout_height">@dimen/location_button_height</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_margin">@dimen/location_button_margin</item>
        <item name="android:alpha">0.7</item>
        <item name="android:background">@drawable/my_location_button_view</item>
        <item name="android:drawableTop">@drawable/ic_my_location_black_24dp</item>
        <item name="android:elevation">@dimen/location_button_elevation</item>
        <item name="android:padding">@dimen/location_button_padding</item>
    </style>

    <style name="TapFloatingActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_margin">@dimen/floating_action_button_margin</item>
        <item name="android:elevation">@dimen/floating_action_button_elevation</item>
        <item name="android:src">@drawable/ic_send_white_24dp</item>
        <item name="fabSize">normal</item>
    </style>

    <style name="CaptureFloatingActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_marginBottom">@dimen/floating_action_button_margin_bottom</item>
        <item name="android:layout_marginEnd">@dimen/floating_action_button_margin</item>
        <item name="android:layout_marginStart">@dimen/floating_action_button_margin</item>
        <item name="android:elevation">@dimen/floating_action_button_elevation</item>
        <item name="android:src">@drawable/ic_camera_black_24dp</item>
        <item name="android:tint">@color/grey_600</item>
        <item name="backgroundTint">@color/white</item>
        <item name="fabSize">normal</item>
    </style>

    <!-- view_cloud_upload_progress.xml -->
    <style name="ViewUploadFrameLayout">
        <item name="android:layout_width">@dimen/upload_frame_layout_height</item>
        <item name="android:layout_height">@dimen/upload_frame_layout_width</item>
    </style>

    <style name="UploadImageView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:padding">@dimen/upload_image_view_padding</item>
        <item name="android:src">@drawable/ic_cloud_upload_black_24dp</item>
    </style>

    <style name="UploadProgressBar" parent="@style/Widget.AppCompat.ProgressBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:indeterminate">true</item>
        <item name="android:progressTint">@color/colorAccent</item>
    </style>

</resources>
